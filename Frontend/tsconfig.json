{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "isolatedModules": true,
    "declaration": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES5", "ES2015"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@common/*": ["./src/components/common/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@store/*": ["./src/store/*"],
      "@style/*": ["./src/style/*"],
      "@assets/*": ["./src/assets/*"]
    }
  },
  "include": ["src"]
}
